<div class="profile">
    <div class="profile__avatar">{{> Avatar image=user.image loadAvatar=true}}
        <h2 class="profile__avatar__name">{{user.firstName}} {{user.lastName}}</h2>
    </div>
    {{#with user}}<div class="profile__main">{{> @partial-block }}</div>
    {{/with}}
    {{#if withButton}}
        <div class="profile__button">{{> Button desc=button-text page=button-page }}</div>
    {{else}}

        <div class="profile__buttons">
            {{>Link desc="Изменить данные" page="pageProfileEdit" type='success' linkLine=true  }}
            {{>Link desc="Изменить пароль" page="pagePasswordEdit" type='success' linkLine=true  }}
            {{>Link desc="Выйти" page=button-page type='danger' }}
        </div>

    {{/if}}
</div>

<div class="block-cancel">{{> Button type="cancel" page=button-page }}</div>

